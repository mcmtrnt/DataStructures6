
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>Index</title>
</head>
<body>
    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:25%">
        <h3 class="w3-bar-item">Menu</h3>
        <a href="@Url.Action("AddOne", "Queue")" class="w3-bar-item w3-button">1. Add one time to Queue</a>
        <a href="@Url.Action("AddHugeList", "Queue")" class="w3-bar-item w3-button">2. Add Huge List of Items to Queue</a>
        <a href="@Url.Action("Display", "Queue")" class="w3-bar-item w3-button">3. Display Queue</a>
        <a href="@Url.Action("Delete", "Queue")" class="w3-bar-item w3-button">4. Delete from Queue</a>
        <a href="@Url.Action("Clear", "Queue")" class="w3-bar-item w3-button">5. Clear Queue</a>
        <a href="@Url.Action("Search", "Queue")" class="w3-bar-item w3-button">6. Search Queue</a>
        <a href="@Url.Action("Index", "Index")" class="w3-bar-item w3-button">7. Return to Main Menu</a>
    </div>

    <!-- Page Content -->
    <div style="margin-left:25%">

        <div class="w3-container w3-teal">
            <h1>Queue</h1>
        </div>
        @Html.Raw(ViewBag.MyQueue)
        @ViewBag.Deleted
        @ViewBag.Found

    </div>
</body>
</html>
